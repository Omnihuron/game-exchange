<div class="row">
  <div class="large-6 large-centered columns">
    
    <%= simple_form_for @item do |f| %>
      <%= f.association :game %>
      <%= f.input :title %>
      <%= f.input :slug %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :image, label: 'Image (should be square, ~500x500)' %>
      </br>
      <div class="large-5 large-centered columns">
        <%= f.button :submit, 'Add Item' %>
      </div>
    <% end %>
    
  </div>
</div>