<div class="row">
  <div class="large-3 columns" id="logo">
    <h1><%= link_to(image_tag('front-page/griffin.png'), home_path) %></h1>
  </div>
  <div class="large-9 columns">
    <ul class="right button-group">
    <li><%= link_to "Games", games_path, class: "button" %></li>
    <li><%= link_to "All Deals", items_path, class: "button" %></li>
    <li><a href="#" class="button">Cart (0)</a></li>
    <% if logged_in? %>
      <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button dropdown"><%= current_user.name %></button><br>
      <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true">
        <% if current_user.admin %>
          <li><a href="#">Admin Dashboard</a></li>
        <% end %>
        <li><a href="#">Profile</a></li>
        <li><a href="#">Order History</a></li>
        <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
      </ul>
    <% else %>
      <li><a href="#" class="button">Sign In</a></li>
    <% end %>
    </ul>
  </div>
</div>